<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="com.winter.app.board.qna.QnaDAO">
    	<sql id="search">
    		<if test="kind == 'k1'">
    			WHERE board_title LIKE concat('%',#{search},'%')
    		</if>
    		<if test="kind == 'k2'">
    			WHERE board_contents LIKE concat('%',#{search},'%')
    		</if>
    		<if test="kind == 'k3'">
    			WHERE board_writer LIKE concat('%',#{search},'%')
    		</if>
    	</sql>
    
    	<select id="detail" resultMap="detailResult" parameterType="QnaDTO">
    		SELECT * 
    		FROM qna q
    			LEFT JOIN qna_files qf
    			ON q.board_num = qf.board_num
    		WHERE q.board_num=#{boardNum}
    	</select>
    
        	<!-- id는 고정되어있지 않으니 마음대로 작성 -->
    	<resultMap type="QnaDTO" id="detailResult">
    		<!-- primary-key 적기 , column을 property에 넣다.(수동 맵핑) -->
    		<id column="board_num" property="boardNum" />
    		<!-- primary-key 이외의 것 작성 -->
    		<result column="board_title" property="boardTitle" />
    		<result column="board_writer" property="boardWriter" />
    		<result column="board_contents" property="boardContents" />
    		<result column="board_date" property="boardDate" />
    		<result column="board_hit" property="boardHit" />
    		<!-- 타입이 List라 1:N에 해당하는 collection(김대기쌤 노션 MyBatis연동탭), javaType은 이 변수의 데이터 타입은 뭐냐(풀 패키지명), ofType은 풀패키지 안써도됨(NoticeFileDTO가 아니라 부모를 적으셨다.) -->
    		<collection property="fileDTOs" javaType="java.util.List" ofType="BoardFileDTO">
    			<!-- property에는 ofType의 setter이름적기 -->
    			<id column="file_num" property="fileNum"/>
    			<result column="file_name" property="fileName" />
    			<result column="file_origin" property="fileOrigin" />
    			<!-- board_num도 꺼내도 되는데 위에서 이미 꺼내서 굳이 꺼낼 필요는 없다. -->
    		</collection>
    	</resultMap>
    	
    	<select id="count" resultType="Long" parameterType="Pager">
    		SELECT COUNT(board_num) FROM qna
    		<include refid="search"></include>
    	</select>
    
    	<select id="list" resultType="QnaDTO" parameterType="Pager">
    		SELECT * 
    		FROM qna 
    		<include refid="search"></include>
    		<!-- ORDER BY board_num DESC -->
    		ORDER BY board_ref DESC, board_step ASC
    		LIMIT #{startNum}, #{perPage}
    	</select>
    	
    	<!-- 키를 생성(AutoIncrement)하고, 키의 속성은 boardNum -->
    	<insert id="add" parameterType="QnaDTO" useGeneratedKeys="true" keyProperty="boardNum">
    		INSERT INTO qna (board_num,board_title,board_writer,board_contents,board_date,board_hit,board_ref,board_step,board_depth)
			VALUES(0,#{boardTitle},#{boardWriter},#{boardContents},now(), 0, #{boardRef}, #{boardStep}, #{boardDepth})
    	</insert>
    	
    	<update id="update" parameterType="QnaDTO">
    		UPDATE qna SET board_title=#{boardTitle},board_contents=#{boardContents} WHERE board_num=#{boardNum}
    	</update>
    	
    	<update id="refUpdate" parameterType="QnaDTO">
    		UPDATE qna SET board_ref=#{boardNum} WHERE board_num=#{boardNum}
    	</update>
    	
    	<update id="stepUpdate" parameterType="QnaDTO">
    		UPDATE qna SET board_step=board_step+1 WHERE board_ref=#{boardRef} AND board_step>#{boardStep}
    	</update>
    	
	    <delete id="delete" parameterType="QnaDTO">
    		DELETE FROM qna WHERE board_num=#{boardNum}
    	</delete>
    	
    	<!-- BoardFileDTO가 아니라 QnaFileDTO도 된다. -->
    	<insert id="fileAdd" parameterType="BoardFileDTO">
    		INSERT INTO qna_files
    		VALUES(null, #{fileName}, #{fileOrigin}, #{boardNum})
    	</insert>
    </mapper>