<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <!-- namespace는 별칭안되서 풀패키지명 스킵못함 -->
    <!-- parameterType은 받는것이고 resultType은 주는것 -->
    <mapper namespace="com.winter.app.board.notice.NoticeDAO">
    	<!-- 반복되는 쿼리를 모아놓은 것 -->
    	<sql id="search">
    		<if test="kind == 'k1'">
    			WHERE board_title LIKE concat('%',#{search},'%')
    		</if>
    		<if test="kind == 'k2'">
    			WHERE board_contents LIKE concat('%',#{search},'%')
    		</if>
    		<if test="kind == 'k3'">
    			WHERE board_writer LIKE concat('%',#{search},'%')
    		</if>
    		<!--  이렇게할수도있다.<choose>
    			<when test=""></when>
    			<when test=""></when>
    			<otherwise></otherwise>
    		</choose> -->
    	</sql>
    
    	<!-- resultType="NoticeDTO"였는데 맞지않아서 Map으로 바꿈, resultMap은 <resultMap>의 id와 일치하게 -->
    	<select id="detail" resultMap="detailResult" parameterType="NoticeDTO">
    			SELECT *
				FROM notice n
					LEFT JOIN notice_files nf
					ON n.board_num = nf.board_num
				WHERE n.board_num = #{boardNum}
    	</select>
    	
    	<!-- id는 고정되어있지 않으니 마음대로 작성 -->
    	<resultMap type="NoticeDTO" id="detailResult">
    		<!-- primary-key 적기 , column을 property에 넣다.(수동 맵핑) -->
    		<id column="board_num" property="boardNum" />
    		<!-- primary-key 이외의 것 작성 -->
    		<result column="board_title" property="boardTitle" />
    		<result column="board_writer" property="boardWriter" />
    		<result column="board_contents" property="boardContents" />
    		<result column="board_date" property="boardDate" />
    		<result column="board_hit" property="boardHit" />
    		<!-- 타입이 List라 1:N에 해당하는 collection(김대기쌤 노션), javaType은 이 변수의 데이터 타입은 뭐냐(풀 패키지명), ofType은 풀패키지 안써도됨(NoticeFileDTO가 아니라 부모를 적으셨다.) -->
    		<collection property="fileDTOs" javaType="java.util.List" ofType="BoardFileDTO">
    			<!-- property에는 ofType의 setter이름적기 -->
    			<id column="file_num" property="fileNum"/>
    			<result column="file_name" property="fileName" />
    			<result column="file_origin" property="fileOrigin" />
    			<!-- board_num도 꺼내도 되는데 위에서 이미 꺼내서 굳이 꺼낼 필요는 없다. -->
    		</collection>
    	</resultMap>
    	
    	<!-- 새로 Pager타입의 parameterType을 추가한다. -->
    	<select id="count" resultType="Long" parameterType="Pager">
    		SELECT COUNT(board_num) FROM notice
			<include refid="search"/>
    	</select>
    	
    	<!-- 옵션3개라 똑같은 쿼리를  3개를 써야하는 비효율성 board_title, board_writer, board_contents 비효율적이라 2번째 대안인 mybatis에 내장된 태그를 쓰는게 나음 -->
    	<!-- WHERE문에는 변수를 쓸 순없음, concat을 쓰는이유는 하나의 문자열로 합치기위함. -->
    	<select id="list" resultType="NoticeDTO" parameterType="Pager">
    		SELECT * 
    		FROM notice 
			<include refid="search"/>
    		ORDER BY board_num DESC
    		LIMIT #{startNum}, #{perPage}
    	</select>
    	
    	<insert id="add" parameterType="NoticeDTO" useGeneratedKeys="true" keyProperty="boardNum">
    		INSERT INTO notice (board_title,board_writer,board_contents,board_date,board_hit)
    		VALUES(#{boardTitle},#{boardWriter},#{boardContents},now(),0)
    	</insert>
    	
    	<delete id="delete" parameterType="NoticeDTO">
    		DELETE FROM notice WHERE board_num=#{boardNum}
    	</delete>
    	
    	<update id="update" parameterType="NoticeDTO">
    		UPDATE notice SET board_title=#{boardTitle},board_contents=#{boardContents} WHERE board_num=#{boardNum}
    	</update>
    	
    	<!-- id는 fileAdd, files테이블에 데이터를 넣는 insert쿼리 만들기 -->
    	<!-- (25.12.02)NoticeFileDTO하고 별 차이없어서 BoardFileDTO로 수정함 -->
    	<insert id="fileAdd" parameterType="BoardFileDTO">
    		INSERT INTO notice_files
    		VALUES(null, #{fileName}, #{fileOrigin} ,#{boardNum})
    	</insert>
    	
    	<!-- file delete -->
    	<delete id="fileDelete" parameterType="BoardDTO">
   			DELETE
			FROM notice_files
			WHERE board_num = #{boardNum};
    	</delete>
    </mapper>